extends HBoxContainer

@onready var pos_label: Label = $Pos
@onready var driver_label: Label = $Driver
@onready var team_label: Label = $Team
@onready var tyre_label: Label = $Tyre
@onready var time_label: Label = $Time
@onready var gap_label: Label = $Gap

func set_data(pos: int, driver_name: String, team_name: String, tyre_str: String, time_str: String, gap_str: String, is_you: bool, is_opponent: bool) -> void:
	pos_label.text = str(pos)
	driver_label.text = driver_name
	team_label.text = team_name
	tyre_label.text = tyre_str
	time_label.text = time_str
	gap_label.text = gap_str

	# Reset colors
	pos_label.add_theme_color_override("font_color", Color(0.7, 0.75, 0.85))
	driver_label.add_theme_color_override("font_color", Color(0.9, 0.92, 0.95))
	team_label.add_theme_color_override("font_color", Color(0.55, 0.6, 0.7))
	tyre_label.add_theme_color_override("font_color", _get_tyre_color(tyre_str))
	time_label.add_theme_color_override("font_color", Color(0.9, 0.92, 0.95))
	gap_label.add_theme_color_override("font_color", Color(0.6, 0.65, 0.75))

	if is_you:
		# Világoskék kiemelés
		pos_label.add_theme_color_override("font_color", Color(0.4, 0.85, 1))
		driver_label.add_theme_color_override("font_color", Color(0.4, 0.85, 1))
		self.modulate = Color(1.05, 1.05, 1.1, 1)
	elif is_opponent:
		# Piros kiemelés
		pos_label.add_theme_color_override("font_color", Color(1, 0.45, 0.45))
		driver_label.add_theme_color_override("font_color", Color(1, 0.45, 0.45))
		self.modulate = Color(1.1, 1.0, 1.0, 1)
	else:
		self.modulate = Color(1, 1, 1, 1)

func _get_tyre_color(tyre: String) -> Color:
	match tyre:
		"SOFT":
			return Color(1, 0.3, 0.3)
		"MED":
			return Color(1, 0.85, 0.2)
		"HARD":
			return Color(0.9, 0.9, 0.95)
		"INTER":
			return Color(0.3, 0.9, 0.4)
		"WET":
			return Color(0.3, 0.6, 1)
		_:
			return Color(0.7, 0.75, 0.85)